    <DockPanel>
        <Menu DockPanel.Dock="Top"  Margin="0 4">
            <MenuItem Header="Base de _datos">
                <MenuItem Header="Nueva..." Command="{Binding CreateDatabaseCommand}"/>
                <MenuItem Header="Abrir..." Command="{Binding OpenDatabaseCommand}" />
                <Separator/>
                <MenuItem Header="Importar..."/>
                <MenuItem Header="Exportar..."/>
            </MenuItem>
            <MenuItem Header="_Gráficos">
                <MenuItem Header="Nuevo tipo de gráfico..." Command="{Binding OpenCreatePremadeGraphicViewCommand}"/>
                <MenuItem Header="Gráfico personalizado..." Command="{Binding OpenGraphicsViewCommand}"/>
            </MenuItem>
        </Menu>
        <Grid Style="{StaticResource MarginStyle}">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TabControl Grid.Row="0" Style="{StaticResource MarginStyle}">
                <TabItem Header="Pozos" >
                    <local:EntitiesControl x:Name="WellsControl"/>
                </TabItem>

                <TabItem Header="Mediciones" >
                    <local:EntitiesControl x:Name="MeasurementsControl"/>
                </TabItem>

                <TabItem Header="Análisis de agua" >
                    <local:EntitiesControl x:Name="WaterAnalysesControl"/>
                </TabItem>

                <TabItem Header="Análisis de suelo" >
                    <local:EntitiesControl x:Name="SoilAnalysesControl"/>
                </TabItem>

                <TabItem Header="Análisis de FLNA" >
                    <local:EntitiesControl x:Name="FLNAAnalysesControl"/>
                </TabItem>

                <TabItem Header="Precipitaciones" >
                    <local:EntitiesControl x:Name="PrecipitationsControl"/>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
    
