        <StatusBar Name="InfoStatusBar" Height="Auto" DockPanel.Dock="Bottom">
            <StatusBarItem Name="RecordsFoundItem" Content="{Binding ItemsCount}" ContentStringFormat="{}{0:N0} registros encontrados" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Separator/>
            <StackPanel Name="ProgressStackPanel" Orientation="Horizontal" Visibility="{Binding ShowProgress, Converter={StaticResource BoolToCollapsedVisibilityConverter}, Mode=OneWay}"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StatusBarItem Name="ProgressInfoTextItem" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                               Content="{Binding ProcessInfo, Mode=OneWay}"/>
                <ProgressBar Name="ProcessProgressBar" Minimum="0" Maximum="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                             Value="{Binding ProgressValue, Mode=OneWay}" IsIndeterminate="{Binding UndefinedProgress, Mode=OneWay}"
                             MinWidth="100"/>
            </StackPanel>            
            <StatusBarItem Name="ExistingWellItem" Content="{Binding WellExistsInfo}" Width="Auto" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Right"/>
