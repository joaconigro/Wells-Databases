<UserControl x:Class="EntitiesManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="EntityPanel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ListView Name="EntitiesListview" Grid.Column="0" ItemsSource="{Binding ObjectsSource, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EntitiesManagerControl}}}" 
                  SelectedItem="{Binding SelectedEntity}"/>
        <StackPanel Grid.Column="1">
            <Button Name="NewEntityButton" Content="Nueva..." Margin="2" Padding="10 1"/>
            <Button Name="EditEntityButton" Content="Editar..." Margin="2" Padding="10 1"/>
            <Label Content=" "/>
            <Button Name="RemoveEntityButton" Content="Borrar..." Margin="2" Padding="10 1"/>
        </StackPanel>
    </Grid>
</UserControl>
